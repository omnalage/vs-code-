// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build C program",
        "type": "shell",
        "command": "clang",  // Use clang (default on macOS) or gcc if installed
        "args": [
          "-g",  // Enable debugging information
          "${file}",  // Current file
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"  // Output the executable next to the source file
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  